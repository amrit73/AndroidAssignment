<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".digitnumberconverter"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_enternumber"
        android:text="Enter Your number"
        style="@style/CustomButtonStyle"
        android:textSize="30dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enternumber"
        android:layout_below="@id/tv_enternumber"
        android:textSize="30dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_changetoword"
        android:layout_below="@id/et_enternumber"
        android:textSize="30dp"
        android:text="convert"
        style="@style/CustomButtonStyle"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_resultdigittonumber"
        android:layout_below="@id/btn_changetoword"
        android:textSize="30dp"
        />
</RelativeLayout>